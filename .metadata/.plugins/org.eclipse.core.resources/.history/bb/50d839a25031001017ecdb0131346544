<script type="text/javascript">
	function chgRedColor(pColorText) {
		//alert("chgRedColor (pColorText) ==> " + pColorText);   // 값들어온거 확인하고 주석처리하기
		let str = document.getElementById("text");
		str.style.color="red";
		str.innerHTML = pColorText; // innerHTML : 태그 안에 내용 즉, 기본색 검정 을 나타낸다
	}
	function chgOrangeColor(pColorText) {
		//alert("chgOrangeColor (pColorText) ==> " + pColorText);
	}
</script>
