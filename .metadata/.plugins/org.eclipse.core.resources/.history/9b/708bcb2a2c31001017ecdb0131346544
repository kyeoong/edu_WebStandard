<script type="text/javascript">
	/*면접 대상*/
	var varName = "varName1";
	let letName = "letName1";
	const constName = "constName1";
	kkName = "kkk";
	
	document.write("1.varName --> "+varName+"<br>");
	document.write("2.letName --> "+letName+"<br>");
	document.write("3.constName --> "+constName+"<br>");
	document.write("4.kkName --> "+kkName+"<br>");
	
	// 1.var 와 let은 재할당 가능 , const는 재할당 불가능
	varName = 100;
	document.write("var 와 let은 재할당 가능 <br> 11.varName --> "+varName+"<br>");
	letName = 300;
	document.write("22.letName --> "+letName+"<br>");
	
	constName = 500;
	document.write("33.constName --> "+constName+"<br>");
	
</script>
