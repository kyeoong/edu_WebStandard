<script type="text/javascript">
	document.write("<br><br> ===Java와 다른점2=== <br>");
	var a = [1,"<br>", 24, "허걱", 43, 49, 76, "대박"];   // 자바는 같은 타입 배열 선언만 가능, 자바스크립트는 섞여도 가능
	for (var i = 0; i < a.length ; i++) {
		document.write("<br>a["+i+"] = "+a[i]+"<p>");
	
	}
	alert(a);
</script>
