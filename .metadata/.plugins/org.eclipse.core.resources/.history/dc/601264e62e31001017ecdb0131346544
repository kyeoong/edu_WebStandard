<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
	a = 7;
	b = "대박";
	
	document.write("정수 a = " + a + "<p>");
	document.write("문자 b = " + b + "<br>");
	

	function varTest() {
		alert('varTest Click');
		var x1 = 1;
		
		if(true) {
			var x1 = 2; // 같은 변수
			var x2 = 4;
			
			alert('varTest1 x1 = ' + x1); // 2
			alert('varTest1 x2 = ' + x2); // 4
		}
		alert('varTest2 x1 = ' + x1); // 2  --> 재선언 된 값이 if 밖에서도 유효
	}
	
	function letTest() {
		alert('letTest Click');
		let x = 1;
	}
	
</script>
</head>
<body>
	<h1>var Vs let 02</h1>
	<button ondblclick="varTest()">varTest</button> <!--  함수 호촐할 때는 () , () 안에 파라메타 -->
	<button onclick="letTest()">letTest</button>
</body>
</html>